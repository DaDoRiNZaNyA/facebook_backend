{
  "compilerOptions": {
    "module": "Node16",  // Установите module в Node16
    "moduleResolution": "Node16",
    "target": "ES6",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules", "dist"]
}
